@page "/admin/user-comic-reviews/{userId}/details/"
@model MangaManagementAPI.Views.Pages.comic_review_detailsModel
@{
    ViewData["Title"] = "Admin | Comic Review Details";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary h1">Detail</h6>
            <a asp-page="/Pages/user-comic-reviews"
               class="mx-2 my-2 text-decoration-none btn btn-outline-danger d-block" style="font-size:20px">
                Return
            </a>
        </div>
        <div class="card-body">
            <h5 class="m-2 font-weight-bold text-primary">Comic Reviews</h5>
            @if (Model.ComicReviewDetails == null || Model.ComicReviewDetails.Count == 0)
            {
                Response.Redirect("/admin/404");
                return;
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Comic Name</th>
                                <th>Rating</th>
                                <th>Comment</th>
                                <th>Comment Time</th>
                                <th>Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model.ComicReviewDetails)
                            {
                                <tr>
                                    <td>@review.ComicName</td>
                                    <td>@review.ComicRatingStar</td>
                                    <td>@review.ComicComment</td>
                                    <td>@review.ReviewTime</td>
                                    <td class="d-flex justify-content-center">
                                        <a asp-page="comic-review-details"
                                           asp-route-userId="@review.UserIdentifier"
                                           asp-route-comicId="@review.ComicIdentifier"
                                           asp-page-handler="deletecomicreview"
                                           class="btn btn-outline-danger">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
