@page "/admin/users-management/{userId:guid?}/details"
@model MangaManagementAPI.Views.Pages.UserDetailsModel
@{
    ViewData["Title"] = "Admin | User Details";
    Layout = "Pages/Shared/_MangaManagementWithNoJs";
}
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">@Model.UserDetails.UserFullName Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>User Id:</strong> @Model.UserDetails.UserIdentifier</p>
                    <p><strong>Username:</strong> @Model.UserDetails.Username</p>
                    <p><strong>Fullname:</strong> @Model.UserDetails.UserFullName</p>
                    <p><strong>Birthday:</strong> @Model.UserDetails.UserBirthday</p>                 
                </div>
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.UserDetails.UserEmail</p>
                    <p><strong>Phone:</strong> @Model.UserDetails.UserPhoneNumber</p>
                    @{
                        var enumValue = ((int)Model.UserDetails.UserGender);
                        string result = string.Empty;
                        switch (enumValue)
                        {
                            case 0: result = "Male"; break;
                            case 1: result = "Female"; break;
                            case 2: result = "Others"; break;
                        }
                    }
                    <p><strong>Gender:</strong> @result</p>
                    <p><strong>Account Balance:</strong> @Model.UserDetails.UserAccountBalance</p>
                    <p>
                    </p>
                </div>
            </div>
            <hr>

            <h6 class="m-2 font-weight-bold text-primary">Buying Histories</h6>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Fullname</th>
                            <th>Birthday</th>
                            <th>Birthday</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var buyingHistory in @Model.UserDetails.BuyingHistorieOutDto)
                        {
                            <tr>
                                <td>@buyingHistory.ComicName</td>
                                <td>@buyingHistory.ChapterNumber</td>
                                <td>@buyingHistory.ChapterUnlockPrice vnd</td>
                                <td>@buyingHistory.BuyingDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <h6 class="m-2 font-weight-bold text-primary">Transaction Histories</h6>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Transaction Amount</th>
                            <th>TransactionDate</th>
                            <th>TransactionCoin</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transactionHistory in @Model.UserDetails.TransactionHistoryOutDto)
                        {
                            <tr>
                                <td>@transactionHistory.TransactionAmount vnd</td>
                                <td>@transactionHistory.TransactionDate</td>
                                <td>@transactionHistory.TransactionCoin vnd</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <h6 class="m-2 font-weight-bold text-primary">Comics Reviewed</h6>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Comic Name</th>
                            <th>Comment</th>
                            <th>Rating Star</th>
                            <th>Review Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comic in @Model.UserDetails.ReviewComicOutDto)
                        {
                            <tr>
                                <td>@comic.ComicName</td>
                                <td>@comic.ComicComment</td>
                                <td>@comic.ComicRatingStar</td>
                                <td>@comic.ReviewTime</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <h6 class="m-2 font-weight-bold text-primary">Chapters Reviewed</h6>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Comic Name</th>
                            <th>Chapter Number</th>
                            <th>Chapter Comment</th>
                            <th>Rating Star</th>
                            <th>Reviewed Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var chapter in @Model.UserDetails.ReviewChapterOutDto)
                        {
                            <tr>
                                <td>@chapter.ComicName</td>
                                <td>@chapter.ChapterNumber</td>
                                <td>@chapter.ChapterComment</td>
                                <td>@chapter.ChapterRatingStar</td>
                                <td>@chapter.ReviewTime</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col-md-6 card-body">
                    <h6 class="m-2 font-weight-bold text-primary">Comics Liked</h6>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Comic Avatar</th>
                                    <th>Comic Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var comic in @Model.UserDetails.ComicLikeOutDto)
                                {
                                    <tr>
                                        <td>@comic.ComicAvatar</td>
                                        <td>@comic.ComicName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-md-6 card-body">
                    <h6 class="m-2 font-weight-bold text-primary">Comics Saved</h6>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Comic Name</th>
                                    <th>Saving Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var comic in @Model.UserDetails.ComicSavingOutDto)
                                {
                                    <tr>
                                        <td>@comic.ComicName</td>
                                        <td>@comic.SavingTime</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
