@using Model
@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Admin - Categories Data";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>

    <!-- Categories Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categories Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Modified</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Modified</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model == null)
                        {
                            <tr class="error">Error</tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.CategoryIdentifier)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CategoryDescription)</td>
                                    <td>
                                        <a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.CategoryIdentifier" class="btn btn-warning btn-circle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <br>
                                        <a asp-controller="Categories" asp-action="Delete" data-id="@item.CategoryIdentifier" class="btn btn-danger btn-circle" data-toggle="modal" data-target="#deleteModal">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Categories Table End -->

    <!-- Delete Modal -->
    @await Html.PartialAsync("_DeleteModal")

</div>
