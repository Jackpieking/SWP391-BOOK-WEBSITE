@model Model.ChapterModel

@{
    ViewData["Title"] = "Admin | Chapter Edit";
}
<div class="container pb-5">
    <div class="row">
        <div class="col-lg-4">
            <h1>Edit</h1>

            <h4>ChapterModel</h4>
        </div>
        <div class="col-lg-8">
            <form class="form-check col-form-label" asp-controller="Chapter" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ChapterIdentifier" class="control-label"></label>
                    <input asp-for="ChapterIdentifier" class="form-control" readonly />
                    <span asp-validation-for="ChapterIdentifier" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChapterNumber" class="control-label"></label>
                    <input asp-for="ChapterNumber" class="form-control" />
                    <span asp-validation-for="ChapterNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChapterUnlockPrice" class="control-label"></label>
                    <input asp-for="ChapterUnlockPrice" class="form-control" />
                    <span asp-validation-for="ChapterUnlockPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ComicIdentifier" class="control-label"></label>
                    <input asp-for="ComicIdentifier" class="form-control" />
                    <span asp-validation-for="ComicIdentifier" class="text-danger"></span>
                </div>
                @if (Model.ChapterImageModels != null)
                {
                    @foreach (var item in Model.ChapterImageModels)
                    {
                        <div class="form-group row">
                            <dt class="col-sm-6 align-content-center">
                                <label class="control-label">@item.ImageNumber</label>
                                <input asp-for="@item.ImageURL" type="file" class="form-control-file" id="UserAvatar" name="UserAvatar" accept="image/*">
                            </dt>
                            <dt class="col-sm-6 align-content-center">
                                <img src="@item.ImageURL" alt="@item.ImageURL" width="100%">
                            </dt>
                        </div>
                    }
                }
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidateScript {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
