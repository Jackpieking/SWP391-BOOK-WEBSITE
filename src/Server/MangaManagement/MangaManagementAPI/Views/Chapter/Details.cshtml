@using Model
@model ChapterModel
@{
    this.ViewData["Title"] = "Admin | Comic Details";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(model => model.ComicModel.ComicName) <q>Chapter @Html.DisplayFor(model => model.ChapterNumber)</q></h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ChapterIdentifier)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ChapterIdentifier)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ChapterUnlockPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ChapterUnlockPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AddedDate)
                </dt>
                <dd class="col-sm-10">
                    @Model.AddedDate
                </dd>
            </dl>
        </div>
        <hr>

        <!-- Chapters Table -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary h1">Chapters Table</h6>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ChapterImageModels.First().ImageNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.ChapterImageModels.First().ImageURL)</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ChapterImageModels.First().ImageNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.ChapterImageModels.First().ImageURL)</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model.ChapterImageModels == null)
                        {
                            <tr class="error">Error</tr>
                        }
                        else
                        {
                            foreach (var item in Model.ChapterImageModels)
                            {
                                <tr>
                                    <td>@item.ImageNumber</td>
                                    <td>@item.ImageURL</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
