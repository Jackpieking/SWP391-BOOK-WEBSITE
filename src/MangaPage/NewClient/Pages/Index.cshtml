            </div>
        </div>
        <div id="mobile-menu-wrap"></div>
    </div>
</header>
<!-- Header End -->
<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="hero__slider owl-carousel">
            @{
                var allComicCount = Model.ComicService.Comics.LongCount();
                var displayComicCount = allComicCount >= 6 ? 6 : allComicCount;
                var autoDecrement = displayComicCount;
            }
            @foreach (var comic in Model.ComicService.Comics)
            {
                <div class="hero__items set-bg" data-setbg="image/comic/comic_avatar/@comic.Avatar">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="hero__text">
                                @*Category here*@
                                <div class="label">Category</div>
                                <h2>@comic.Name</h2>
                                <p>Description</p>
                                <a href="./anime-details.html">
                                    <span>
                                        Read now
                                        <i class="fa fa-angle-right"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Hero Section End -->
