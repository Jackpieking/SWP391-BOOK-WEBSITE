@page "/auth/login"
@model NewClient.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng Nhập";
}

@section ValidateScript {
    @await Html.PartialAsync("Shared/_ValidationScriptsPartial")
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="/image/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Đăng Nhập</h2>
                    <p>Chào mừng đến với Manganexus</p>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="d-flex justify-content-center align-items-center">
    <div asp-validation-summary="All" class="alert alert-danger mt-5 w-75 fs-4 loginError text-center"></div>
</div>
<!-- Normal Breadcrumb End -->
<!-- Login Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Đăng nhập</h3>
                    <div data-bs-theme="dark">
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="UserLogin.Username" class="form-label text-white">Tài khoản</label>
                                <input asp-for="UserLogin.Username" class="form-control" aria-describedby="UsernameHelp">
                                <div id="UsernameHelp" class="form-text">Nhập tài khoản của bạn</div>
                                <span asp-validation-for="UserLogin.Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="UserLogin.Password" class="form-label text-white">Mật khẩu</label>
                                <input asp-for="UserLogin.Password" class="form-control inputPassword" aria-describedby="PasswordHelp">
                                <div id="PasswordHelp" class="form-text">Nhập mật khẩu của bạn</div>
                                <span asp-validation-for="UserLogin.Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3 form-check">
                                <input asp-for="UserLogin.RememberMe" class="form-check-input">
                                <label asp-for="UserLogin.RememberMe" class="form-check-label text-white">Nhớ mật khẩu</label>
                            </div>
                            <button class="btn btn-outline-warning rounded showPasswordBtn" type="button">Hiện mật khẩu</button>
                            <br />
                            <br />
                            <button type="submit" class="btn btn-primary btn-lg rounded">Đăng nhập</button>
                        </form>
                    </div>
                    <a href="#" class="forget_pass">Quên mật khẩu?</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Chưa có tài khoản?</h3>
                    <a asp-page="Signup" class="btn btn-danger btn-lg">Tạo tài khoản</a>
                </div>
            </div>
        </div>
        <div class="login__social">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6">
                    <div class="login__social__links">
                        <span>Đăng nhập bằng</span>
                        <ul>
                            <li>
                                <a href="#" class="btn btn-lg btn-primary w-75">
                                    <i class="fa fa-facebook"></i> Facebook
                                </a>
                            </li>
                            <li>
                                <a href="#" class="btn btn-lg btn-danger w-75">
                                    <i class="fa fa-google"></i> Google
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login Section End -->

<script defer>
    document
        .querySelector(".showPasswordBtn")
        .addEventListener("click", function(e) {
            let passwordInput = document.querySelector(".inputPassword");

            if (passwordInput.type === "password"){
                passwordInput.type = "text";
            }
            else {
                passwordInput.type = "password";
            }
        });

    let errorBox = document.querySelector(".loginError");

    if (errorBox.innerHTML == '<ul><li style="display:none"></li>\n</ul>') {
        errorBox.classList.add("d-none");
    }
    else {
        errorBox.classList.remove("d-none");
    }

</script>